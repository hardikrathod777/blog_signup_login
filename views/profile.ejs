        <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
        <script>
            
        var options = {
            series: [{
            name: 'sale',
            data: [50,45,60,70,50,45,60,70]
        }, {
            name: 'purchase',
            data: [-21, -54, -45, -35, -21, -54,-45,-35]
        }],
            chart: {
            type: 'bar',
            height: 290,
            stacked: true,
            toolbar: {
